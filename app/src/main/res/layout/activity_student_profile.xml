<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary">

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/back_arrow" />

        </androidx.appcompat.widget.Toolbar>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <androidx.cardview.widget.CardView
                   android:layout_width="120dp"
                   android:layout_height="120dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="10dp"
                   app:cardCornerRadius="100dp"
                   app:cardElevation="3dp"
                   android:layout_marginBottom="10dp"
                   >

                   <ImageView
                       android:id="@+id/profile"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@drawable/student_profile" />
               </androidx.cardview.widget.CardView>


               <TextView
                   android:id="@+id/name"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="10dp"
                   android:layout_marginVertical="5dp"
                   android:background="@drawable/profile_text_background"
                   android:padding="10dp"
                   android:text="Md Mominul Islam"
                   android:textColor="@color/black"
                   android:textSize="22sp"
                   android:textStyle="bold"
                   />

               <TextView
                   android:id="@+id/id"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="10dp"
                   android:layout_marginVertical="5dp"
                   android:background="@drawable/profile_text_background"
                   android:padding="10dp"
                   android:text="220201033"
                   android:textColor="@color/black"
                   android:textSize="22sp"
                   android:textStyle="bold"
                   />


               <TextView
                   android:id="@+id/department"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="10dp"
                   android:layout_marginVertical="5dp"
                   android:background="@drawable/profile_text_background"
                   android:padding="10dp"
                   android:text="Computer Science and Engineering"
                   android:textColor="@color/black"
                   android:textSize="22sp"
                   android:textStyle="bold"
                   />


               <TextView
                   android:id="@+id/batchSection"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="10dp"
                   android:layout_marginVertical="5dp"
                   android:background="@drawable/profile_text_background"
                   android:padding="10dp"
                   android:text="   batch - 15                     Section - A "
                   android:textColor="@color/black"
                   android:textSize="22sp"
                   android:textStyle="bold"
                   />




               <TextView
                   android:id="@+id/levelTerm"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="10dp"
                   android:layout_marginVertical="5dp"
                   android:background="@drawable/profile_text_background"
                   android:padding="10dp"
                   android:text="Level - 3                       Term - I"
                   android:textColor="@color/black"
                   android:textSize="22sp"
                   android:textStyle="bold"
                   />


               <TextView
                   android:id="@+id/email"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="10dp"
                   android:layout_marginVertical="5dp"
                   android:background="@drawable/profile_text_background"
                   android:padding="10dp"
                   android:text="mominulislamf65@gmail.com"
                   android:textColor="@color/black"
                   android:textSize="22sp"
                   android:textStyle="bold"
                   />

               <TextView
                   android:id="@+id/phone"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="10dp"
                   android:layout_marginVertical="5dp"
                   android:background="@drawable/profile_text_background"
                   android:padding="10dp"
                   android:text="01987546698"
                   android:textColor="@color/black"
                   android:textSize="22sp"
                   android:textStyle="bold"
                   />


               <TextView
                   android:id="@+id/code"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="10dp"
                   android:layout_marginVertical="5dp"
                   android:background="@drawable/profile_text_background"
                   android:padding="10dp"
                   android:text="Verification Code: 2589"
                   android:textColor="@color/black"
                   android:textSize="22sp"
                   android:textStyle="bold"
                   />


           </LinearLayout>



           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               >


               <com.google.android.material.button.MaterialButton
                   android:id="@+id/updatebtn"
                   android:layout_width="150dp"
                   android:layout_height="60dp"
                   android:textSize="22sp"
                   android:textStyle="bold"
                   android:padding="5dp"
                   android:layout_marginTop="50dp"
                   android:text="Update"
                   app:cornerRadius="10dp"
                   android:textColor="@color/white"
                   android:backgroundTint="#0984E3"
                   android:layout_marginBottom="100dp"
                   android:layout_marginHorizontal="15dp"
                   />


               <com.google.android.material.button.MaterialButton
                   android:id="@+id/deletebtn"
                   android:layout_width="150dp"
                   android:layout_height="60dp"
                   android:textSize="22sp"
                   android:textStyle="bold"
                   android:padding="5dp"
                   android:layout_marginTop="50dp"
                   android:text="Delete"
                   app:cornerRadius="10dp"
                   android:textColor="@color/white"
                   android:backgroundTint="#B80000"
                   android:layout_marginBottom="100dp"
                   android:layout_marginHorizontal="15dp"

                   />


           </LinearLayout>



       </LinearLayout>


   </ScrollView>


    </LinearLayout>

</LinearLayout>
